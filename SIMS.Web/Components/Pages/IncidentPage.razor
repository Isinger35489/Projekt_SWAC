    @* Laden von Incidents aus api*@
    private async Task LoadIncidents()
    {
        try
        {
            errorMessage = "";
            successMessage = "";
            incidents = await Http.GetFromJsonAsync<List<Incident>>("api/incidents");
            StateHasChanged();
        }
        catch (Exception ex)
